<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style1.css">
    <link rel="stylesheet" href="/stylesheets/nav.css">
    <title>News Website</title>
</head>
<body>
    <%- include('../partials/__nav') %>
    <div class="bar">
        <i class="open fa-solid fa-bars-staggered"></i>
        <i class="close fa-solid fa-xmark"></i>
    </div>

    <div id="home" class="topHeadlines">
        <div class="left">
            <div class="title">
                <h2>Breaking News</h2>
            </div>
            <% for( let i = 0; i < 1; i++ ) { %>
                
              <div class="img" id="breakingImg">
                <img src="/images/<%= data[i].foto_artikel %>" alt="<%= data[i].judul %>">
              </div>
              <div class="text" id="breakingNews">
                  <div class="title">
                      <a href="/berita/<%= data[i].id_artikel %>"><%= data[i].judul %></a>
                  </div>
                  <div class="description">
                      <%= data[i].isi %>
                  </div>
              <% } %>
            </div>
        </div>

        <!-- Artikel Popular -->
        <div class="right">
            <div class="title">
                <h2>Top Headlines</h2>
            </div>
            <div class="topNews">
                <% if (popular && popular.length > 0) { %>
                    <% for( let i = 0; i < popular.length; i++ ) { %>
                        <div class="news">
                            <div class="img">
                                <img src="/images/<%= popular[i].foto_artikel %>" alt="<%= popular[i].judul %>">
                            </div>
                            <div class="text">
                                <div class="title">
                                    <a href="/berita/<%= popular[i].id_artikel %>"><p><%= popular[i].judul %></p></a>
                                </div>
                            </div>
                        </div>
                    <% } %>
                <% } %>
                
            </div>
        </div>
    </div>

    <!-- artikel terbaru -->
    <div id="article" class="page2">
        <div class="news" id="sportsNews">
            <div class="title">
                <h2>Latest News</h2>
            </div>
            <div class="newsBox">
                <% if (terbaru && terbaru.length > 0) { %>
                    <% for( let i = 0; i < terbaru.length; i++ ) { %>
                        <div class="newsCard">
                            <div class="img">
                                <img src="/images/<%= terbaru[i].foto_artikel %>" alt="<%= terbaru[i].judul %>">
                            </div>
                            <div class="text">
                                <div class="title">
                                    <a href="/berita/<%= terbaru[i].id_artikel %>"><p><%= terbaru[i].judul %></p></a>
                                </div>
                            </div>
                        </div>
                    <% } %>
                <% } %>
            </div>
        </div>

        <!-- artikel terlama -->
        <div class="news" id="businessNews">
            <div class="title">
                <h2>Oldest News</h2>
            </div>
            <div class="newsBox">
                <% if (terlama && terlama.length > 0) { %>
                 <% for( let i = 0; i < terlama.length; i++ ) { %>
                 
                    <div class="newsCard">
                        <div class="img">
                            <img src="/images/<%= terlama[i].foto_artikel %>" alt="<%= terlama[i].judul %>">
                        </div>
                        <div class="text">
                            <div class="title">
                                <a href="/berita/<%= terlama[i].id_artikel %>"><p><%= terlama[i].judul %></p></a>
                            </div>
                        </div>
                    </div>
                 <% } %>
                <% } %>
            </div>
        </div>
        <%- include('../partials/__foot') %>

    <script src="/javascripts/script1.js"></script>
</body>
</html>